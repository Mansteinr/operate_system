
.card-wrapper
  display block
  padding 20px
  background-color #FFFFFF
  border solid 1px #d5dde0
  box-shadow 0 4px 8px rgba(0,0,0,.1)
  border-radius 5px
  &.card-content
    padding-top 10px
    margin-top 20px
  .card-title
    position relative
    height 40px
    line-height 40px
    font-size 16px
    padding-right 12px
    .el-button-group
      position absolute
      right 0
      .el-button:not(.active)
        color #409EFF
        border-color #c6e2ff
        background-color #ecf5ff
    &::before
      content ''
      display inline-block
      width 2px
      height 20px
      background-color #00c2de
      vertical-align -5px
      margin-right 10px
  .card-container
    margin-top 10px
    position relative
    .no-charts
      background url(../images/no-data.png) 50% 35% no-repeat
      background-size auto 200px
      position relative
      p
        position absolute
        top 72%
        left 49%
    .el-form-item
      margin 0
      margin-top 10px
      margin-left 10px
      &.short-specail-item
        width 370px
        .el-select
          width 285px
      &.specail-item
        width 500px
        .el-select
          width 400px
      &.card-query
        position absolute
        right 0
.table
  .serarch-input
    width 15%
    left: 85% 
  table
    .param-item
      display block
      padding 4px 4px
      margin 0 0 5px 0
      font-size 12px
      border-radius 3px
      background-color #f5f5f5
      height 16px
      line-height 16px
      white-space nowrap
      text-overflow ellipsis
      overflow hidden
      word-wrap break-word
      word-break break-all
    tr
      .cell
        white-space nowrap !important
        text-overflow ellipsis !important
        overflow hidden !important
        word-wrap break-word !important
        word-break break-all !important
    td 
      padding 8px 0 !important

.el-picker-panel.el-date-range-picker.el-popper.has-sidebar
  left 50% !important
  margin-left -440px !important

.el-form.demo-form-inline.el-form--inline 
  display flex
  flex-wrap wrap
  .el-form-item
    max-width 33%
    min-width 25%
    
